extends layout

block content

  h1 Take a tour of our favorite spots on campus.
  .topnav
    button#campusButton Campus
    button#domeButton Dome
    button#grottoButton Grotto
    button#hesburghButton Hesburgh
    button#stadiumButton Stadium
    button#overviewButton Zoom
    button#quizButton Quiz
  .main
    h1 Take a Notre Dame Quiz!
    p When finished click submit to see how you did!
    button#startButton Start
    button#submitButton Submit
    script(src='javascripts/client.js')
    script.
     const questions = [
     {
      question: "Who is the President of Notre Dame?",
      answers: {
       a: "Joe Biden",
       b: "Knute Rockne",
       c: "Father John Jenkins"
     },
     correctAnswer: "c"
    },
    {
     question: "What year was the Universoty founded?",
     answers: {
      a: "1842",
      b: "1953",
      c: "1776"
     },
     correctAnswer: "a"
    },
    {
     question: "Notre Dame is located in what city?",
     answers: {
      a: "New York",
      b: "Chicago",
      c: "Indianpolis",
      d: "South Bend"
    },
    correctAnswer: "d"
   },
   {
    question: "How many residence halls are on campus?",
    answers: {
      a: "51",
      b: "32",
      c: "28"
    },
    correctAnswer: "b"
   },{
    question: "What are Notre Dame's offical colors?",
    answers: {
      a: "Blue and Gold",
      b: "Green and Navy",
      c: "Gold and Green"
    },
    correctAnswer: "a"
  }
 ];

     function buildQuiz(){
      const output = [];
      console.log('Like button was clicked');
      // for each question...
      quesions.forEach(
      (currentQuestion, questionNumber) => {

        // variable to store the list of possible answers
        const answers = [];

        // and for each available answer...
        for(letter in currentQuestion.answers){

          // ...add an HTML radio button
          answers.push(
            `<label>
              <input type="radio" name="question${questionNumber}" value="${letter}">
              ${letter} :
              ${currentQuestion.answers[letter]}
            </label>`
          );
        }

        // add this question and its answers to the output
        output.push(
          `<div class="question"> ${currentQuestion.question} </div>
          <div class="answers"> ${answers.join('')} </div>`
        );
      }
    );
}

